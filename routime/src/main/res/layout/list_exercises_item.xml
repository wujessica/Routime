<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/exercise_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:textSize="@dimen/workout_name_font_size"
        android:text="Pushups"/>

    <TextView
        android:id="@+id/timer_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/exercise_name"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:textSize="@dimen/workout_duration_font_size"
        android:text="30"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/timer_amount"
        android:layout_below="@+id/exercise_name"
        android:textSize="@dimen/workout_duration_font_size"
        android:paddingBottom="5dp"
        android:text="@string/seconds"/>

</RelativeLayout>