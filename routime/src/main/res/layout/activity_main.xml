<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.jessicawu.routime.MainActivity"
    android:background="#2C3E50"
    >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:text="New Routine"
        android:id="@+id/new_routine"
        android:layout_gravity="center_horizontal"
        android:onClick="goToAddWorkout"
        android:background="#F9690E"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:text="Load Routine"
        android:id="@+id/load_routine"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/new_routine"
        android:layout_alignLeft="@+id/new_routine"
        android:layout_alignStart="@+id/new_routine"
        android:background="#F22613"
        />

</RelativeLayout>