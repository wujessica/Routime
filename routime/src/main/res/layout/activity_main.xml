<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.jessicawu.routime.MainActivity"

    android:background="@color/background_blue">

    <Button
        android:id="@+id/new_routine"
        android:layout_width="fill_parent"
        android:layout_height="240px"
        android:text="@string/new_routime"
        android:textAllCaps="true"
        android:textColor="@color/font_colour_white"
        android:textSize="19pt"
        android:layout_gravity="center_horizontal"
        android:onClick="goToAddWorkout"
        android:background="@color/button_orange"/>

    <Button
        android:id="@+id/load_routine"
        android:layout_width="fill_parent"
        android:layout_height="240px"
        android:text="@string/load_routime"
        android:textAllCaps="true"
        android:textColor="@color/font_colour_white"
        android:textSize="19pt"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/new_routine"
        android:layout_alignLeft="@+id/new_routine"
        android:layout_alignStart="@+id/new_routine"
        android:background="@color/button_red"/>

</RelativeLayout>