<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    >

    <TextView
        android:id="@+id/routimes"
        android:layout_width="fill_parent"
        android:layout_height="190px"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:textColor="@color/font_colour_white"
        android:gravity="center"
        android:background="@color/header_blue"
        android:text="@string/routimes"/>

    <TextView
        android:id="@+id/no_routines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/font_colour_white"
        android:text="@string/no_routines"/>

    <ListView
        android:id="@+id/routine_list"
        android:layout_width="match_parent"
        android:textColor="@color/font_colour_white"
        android:divider="#C5EFF7"
        android:dividerHeight="3dp"
        android:layout_height="wrap_content"/>

</LinearLayout>